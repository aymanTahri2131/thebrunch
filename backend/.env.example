# Database Configuration
# Pour le d√©veloppement local: mongodb://localhost:27017/thebrunch_db
# Pour Railway/Production: mongodb+srv://username:password@cluster.mongodb.net/thebrunch
MONGODB_URI=mongodb://localhost:27017/thebrunch_db

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration (CHANGEZ EN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_123456789

# Frontend URLs for CORS
# Pour Railway: https://your-app.railway.app
# Pour Netlify frontend: https://your-site.netlify.app
FRONTEND_URL=http://localhost:8080
ADMIN_URL=http://localhost:8080/admin

# Configuration Twilio (OBLIGATOIRE)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Configuration Cloudinary (OBLIGATOIRE)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Upload Configuration
MAX_FILE_SIZE=10mb

# Database Connection Options
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000